#!/bin/bash

# heroku config:set USER=$USER --app=${TARGET_APP}-meta
curl -s -H "Accept: application/json"   \
  -u :$HEROKU_API_KEY                   \
  --data-binary "{\"USER\":\"$USER\"}"  \
  -X PUT https://api.heroku.com/apps/${TARGET_APP}-meta/config_vars > /dev/null

ssh-keygen -f /tmp/ssh_host_dsa_key -P "" -t dsa

cat >/tmp/authorized_keys <<'EOF'
ssh-rsa  gitproxy@heroku
ssh-rsa  noah@Hero-Jr.local
EOF

cat >/tmp/sshd_config <<EOF
Protocol 2
Port $PORT
AuthorizedKeysFile /tmp/authorized_keys
PasswordAuthentication no
ChallengeResponseAuthentication no
UsePAM no
PermitRootLogin no
AllowUsers $USER
LoginGraceTime 20
LogLevel DEBUG3
PidFile /tmp/sshd.pid
HostKey /tmp/ssh_host_dsa_key
UsePrivilegeSeparation no
PermitUserEnvironment yes
AcceptEnv DEV_PATH GEM_HOME GEM_PATH
ForceCommand /app/shell
EOF

/usr/sbin/sshd -D -e -f /tmp/sshd_config 2>&1
